<%= render 'shared/header' %>
<div class='container'>
  <div class='content'>
    <h1>Blog</h1>
    <%= link_to 'New blog', new_blog_path %>
    <table>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>

      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.text %></td>
          <td><%= link_to 'Show', blog_path(blog) %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog_path(blog),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>

    <%= form_with scope: :blog, url: blogs_path, local: true do |form| %>
      ...
    <% end %>

    <%= link_to 'Back', blogs_path %>
  </div>
  <%= render 'shared/footer' %>
</div>
