<%= render 'shared/header' %>
<div class='container'>
  <div class='content'>
    <%= render 'shared/sidebar' %>
    <div class='leftContent'>
      <div class='title'>
        <h2>
          <%= @blog.title %>
        </h2>
      </div>

      <div class='blogText'>
        <p>
          <%= @blog.text %>
        </p>
      </div>

      <div class='backButton'>
        <%= link_to 'Back', blogs_path %>
      </div>

      <div class='comments'>
        <h2>Add a comment:</h2>
        <%= render 'blog_comments/form' %>

        <h2>Comments</h2>
        <%= render @blog.blog_comments %>
      </div>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
