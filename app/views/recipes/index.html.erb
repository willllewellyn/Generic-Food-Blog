<%= render 'shared/header' %>
<div class='container'>
  <div class='content'>
    <h1>Your Recipes</h1>
    <p>
      Why not <%= link_to 'add your own!', new_recipe_path %>
    </p>
    <table>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Ingredients</th>
        <th colspan="3"></th>
      </tr>

      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.title %></td>
          <td><%= recipe.author %></td>
          <td><%= recipe.ingredient %></td>
          <td><%= link_to 'Show', recipe_path(recipe) %></td>
        </tr>
      <% end %>
    </table>

    <%= form_with scope: :recipe, url: recipes_path, local: true do |form| %>
      ...
    <% end %>

  </div>
</div>
<%= render 'shared/footer' %>
