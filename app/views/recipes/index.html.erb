<%= render 'shared/header' %>
<div class='container'>
  <div class='body'>
    <h1>Listing Recipes</h1>
    <%= link_to 'New recipe', new_recipe_path %>
    <table>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Ingredient</th>
        <th>Method</th>
        <th colspan="3"></th>
      </tr>

      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.title %></td>
          <td><%= recipe.author %></td>
          <td><%= recipe.ingredient %></td>
          <td><%= recipe.method %></td>
          <td><%= link_to 'Show', recipe_path(recipe) %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe_path(recipe),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>


    <%= form_with scope: :recipe, url: recipes_path, local: true do |form| %>
      ...
    <% end %>

    <%= link_to 'Back', recipes_path %>
  </div>
  <%= render 'shared/footer' %>
</div>
