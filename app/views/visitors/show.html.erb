<%= render 'shared/header' %>
<div class='container'>
  <div class='content'>
    <%= render 'shared/sidebar' %>
    <div class='preamble'>
      <h1>Recommendations</h1>
    </div>

    <table><h2>Recommended Recipe for <%= @visitor.name %>:</h2>
      <tr>
        <th>Recipe</th>
        <th>Rating</th>
      </tr>
      <% @visitor.recommend_recipes.each do |key, value| %>
      <tr>
        <td><%= key.name %></td>
        <td><%= value.round(2) %></td>
      </tr>
      <% end %>
    </table>

  </div>
  <%= render 'shared/footer' %>
</div>
